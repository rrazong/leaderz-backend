{
  "name": "leaderz-backend",
  "version": "1.0.0",
  "description": "Backend for Leaderz golf tournament leaderboard app",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --no-deprecation dist/index.js",
    "dev": "tsx watch --no-deprecation src/index.ts",
    "test": "jest",
    "test-setup": "tsx src/test-setup.ts",
    "db:schema": "tsx scripts/run-schema.ts",
    "db:init": "tsx scripts/run-init-data.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "golf",
    "tournament",
    "leaderboard",
    "twilio",
    "whatsapp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "twilio": "^4.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.2"
  }
}
